<!-- Signup Section -->
<section id="signup" class="signup-section">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto text-center">

        <i class="far fa-calendar fa-2x mb-2 text-white"></i>
        <h2 class="text-white mb-5">Request an appointment!</h2>
        {{#if error}}
            <div class="alert alert-danger mr-0 mr-sm-2 mb-3 mb-sm-0" role="alert">
              <h4 class="alert-heading">Whoa!</h4>
          {{#each error}}
              <p>{{this}}</p>
          {{/each}}
            </div>
        {{/if}}
        {{#if success}}
            <div class="alert alert-success mr-0 mr-sm-2 mb-3 mb-sm-0" role="alert">
              <h4 class="alert-heading">Thank You!</h4>
              <p>{{success}}</p>
            </div>
        {{/if}}
        <form action="/appointment" method="POST">
          <div class="form-inline d-flex mx-auto my-0 py-0">
            <div class="form-group my-2 flex-fill my-0">
              <input type="text" class="form-control form-control-lg mr-0 mr-sm-2 mb-3 mb-sm-0 flex-fill" id="fname"
                name="fname" placeholder="Enter first name...">
            </div>
            <div class="form-group my-2 flex-fill my-0">
              <input type="text" class="form-control form-control-lg mr-0 mr-sm-2 mb-3 mb-sm-0 flex-fill" id="lname"
                name="lname" placeholder="Enter last name...">
            </div>
          </div>
          <div class="form-group my-2 form-inline d-flex">
            <input type="email" class="form-control form-control-lg mr-0 mr-sm-2 mb-3 mb-sm-0 flex-fill" id="email"
              name="email" placeholder="Enter email address...">
          </div>
          <div class="form-group my-2 form-inline d-flex">
            <input type="email" class="form-control form-control-lg mr-0 mr-sm-2 mb-3 mb-sm-0 flex-fill" id="confirm"
              name="confirm" placeholder="Confirm your email">
          </div>
          <div class="form-group my-2 form-inline d-flex">
            <textarea class="form-control form-control-lg mr-0 mr-sm-2 mb-3 mb-sm-0 flex-fill" id="problem" name="problem"
              rows="3" placeholder="What's the problem?"></textarea>
          </div>
          <button type="submit" class="btn btn-primary mx-auto">Request Appointment</button>
        </form>

      </div>
    </div>
  </div>
</section>

